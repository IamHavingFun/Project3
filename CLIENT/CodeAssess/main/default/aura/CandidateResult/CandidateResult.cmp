<aura:component controller="CanidateResultController">
    <aura:attribute name="candidateresults" type="List" />
    <aura:attribute name="key" type="String" /> 
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />        
    <lightning:input type="text" name="searchKey" label="Enter" aura:id="searchKey" onchange="{!c.searchKeyChange}" placeholder="Search" />          
    <table class="slds-table slds-table_bordered slds-table_striped slds-table_cell-buffer slds-table_fixed-layout">
        <thead>
            <tr class="slds-text-heading_label">              
                <th scope="col"><div class="slds-truncate" title="Name">Name</div></th>
                <th scope="col"><div class="slds-truncate" title="Type">Phone</div></th>         
                <th scope="col"><div class="slds-truncate" title="Phone">Email</div></th> 
                <th scope="col"><div class="slds-truncate" title="Phone">PassRatio</div></th>            
            </tr>
        </thead>
        <tbody>
            <aura:iteration items="{!v.candidateresults}" var="candidateresult">
                <tr>  
                    <td><div class="slds-truncate" title="{!candidateresult.Name}">{!candidateresult.Name}</div></td>
                    <td><div class="slds-truncate" title="{!candidateresult.Phone}">{!candidateresult.Phone}</div></td>                   
                    <td><div class="slds-truncate" title="{!candidateresult.Email}">{!candidateresult.Email}</div></td> 
                    <td><div class="slds-truncate" title="{!candidateresult.PassRatio}">{!candidateresult.PassRatio}</div></td>                    
                </tr>
            </aura:iteration>
        </tbody>
    </table>
</aura:component>
